generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id        String   @id @default(uuid())
  code      String   @unique
  createdAt DateTime @default(now())
  events    RoomEvent[]
  snapshots RoomSnapshot[]
}

model RoomEvent {
  id        String   @id @default(cuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  type      String
  payload   Json
  createdAt DateTime @default(now())
}

model RoomSnapshot {
  id        String   @id @default(cuid())
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  version   Int
  state     Json
  createdAt DateTime @default(now())
}

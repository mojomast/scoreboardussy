{
  "name": "improvscoreboard-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time full-screen scoreboard web app",
  "scripts": {
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev": "concurrently \"npm:dev:server\" \"npm:dev:client\"",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build": "npm run build:server && npm run build:client",
    "start": "cd server && npm start",
    "test": "cd server && npm test"
  },
  "keywords": [
    "scoreboard",
    "real-time",
    "react",
    "nodejs",
    "websocket",
    "socket.io",
    "tailwindcss"
  ],
  "author": "Cascade",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.10.0",
    "dotenv": "^16.5.0",
    "express-jwt": "^8.5.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.23"
  }
}
